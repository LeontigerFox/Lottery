<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.banana69.lottery.infrastructure.dao.IUserTakeActivityDao">

    <resultMap id="userTakeActivityMap" type="com.banana69.lottery.infrastructure.po.UserTakeActivity">
        <id column="id" property="id"/>
        <result column="u_id" property="uId"/>
        <result column="take_id" property="takeId"/>
        <result column="activity_id" property="activityId"/>
        <result column="activity_name" property="activityName"/>
        <result column="take_date" property="takeDate"/>
        <result column="take_count" property="takeCount"/>
        <result column="uuid" property="uuid"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <insert id="insertUserTakeActivity" parameterType="com.banana69.lottery.infrastructure.po.UserTakeActivity">
        INSERT INTO user_take_activity
        (u_id, take_id, activity_id, activity_name, take_date,
        take_count, uuid, create_time, update_time)
        VALUES
        (#{uId}, #{takeId}, #{activityId}, #{activityName}, #{takeDate},
        #{takeCount}, #{uuid}, now(), now())
    </insert>


</mapper>